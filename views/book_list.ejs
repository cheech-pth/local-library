<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <% if (book_list.length) { %>
      <ul>
        <% book_list.forEach(function(book){ %>
          <li>
            <a href="<%= book.url %>"><%= book.title %> <%= '('+book.author.name+')' %></a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>There are no books.</p>
    <% } %>
</body>
</html>