<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <% if (bookInstance_list && bookInstance_list.length) { %>
      <ul>
        <% for (let val of bookInstance_list) { %>
          <li>
            <a href="<%= val.url %>"><%= val.book.title %> : <%= val.imprint %></a>
            <% if (val.status === 'Available') { %>
              <span><%= val.status %></span>
            <% } else if (val.status === 'Maintenance') { %>
              <span><%= val.status %></span>
            <% } else { %>
              <span><%= val.status %></span>
              <span>Due: <%= val.due_back %></span>
            <% } %>
          </li>
        <% } %>
      </ul>
    <% } %>
  </body>
</html>